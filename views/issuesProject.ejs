<% include partials/header %>
<% include partials/menu %>

<div class="container-fluid" style="margin:  10px 0 40px 0;">

  <div class="col-sm-3" style=" background-color: antiquewhite; margin:  10px 0 0px 0;">
    <ul class="list-group" style=" margin:  10px 0 10px 0;">
      <a href="?page=overview"><li class="list-group-item" style="background-color: black">Overview</li></a>
      <a href="?page=activity"><li class="list-group-item" style="background-color: black">Activity</li></a>
      <a href="?page=members"><li class="list-group-item" style="background-color: black">Members</li></a>
      <a href="?page=issues"><li class="list-group-item" style="background-color: black">Issues</li></a>
    </ul>
  </div>

  <div class="col-sm-9" style="background-color: antiquewhite;  margin: 10px 0 0 0;">
    <div class="" style="background-color: white; margin: 10px 0 0 0">
        <form class="form-signin" method="get" action="/">
              <table id="mytable" class="table table-bordred table-striped">
              <tr>
                <td style="width:10%"><input type="checkbox" name="check_id"  value="true"></td>
                <td style="width:80%"><input type="text" class="form-control" placeholder="ID" required autofocus></td>
              </tr>

              <tr>
                <td style="width:10%"><input type="checkbox" name="check_name" value="true"></td>
                <td style="width:80%"> <input type="text" class="form-control" placeholder="Name" required></td>
              </tr>

              <tr>
                <td style="width:10%"><input type="checkbox" name="check_member" value="true"></td>
                <td style="width:90%">
                  <select class="form-control" name="member">
                      <option value="">Choose Position ...</option>
                      <option value="">1</option>
                      <option value="">2</option>
                  </select>
                </td>
              </tr>

              <tr>
                <td></td>
                <td><button style="width%2F:10%" class="btn btn-success pull-left" type="submit" name="cari">Search</button>
              </tr>
            </table>
        </form><!-- /form -->
    </div><!-- /card-container -->

    <div class="card card-container">
      Option
        <form class="form-signin" method="get" action="/">
            <!-- <span id="reauth-email" class="reauth-email"></span> -->
            <table id="mytable" class="table table-bordred table-striped">
              <tr>
                <td style="width:10%"><input type="checkbox" name="check_name" value="true"></td>
                <td style="text-align: left;">Member ID</td>
              </tr>

              <tr>
                <td style="width:10%"><input type="checkbox" name="check_name" value="true"></td>
                <td style="text-align: left;" > Name of Members </td>
              </tr>

              <tr>
                <td></td>
                <td><button style="width:10%;" class="btn btn-success pull-left" type="submit" name="cari">Apply</button></td>
              </tr>
            </table>
        </form><!-- /form -->
    </div><!-- /card-container -->

    <div class="card card-container">
      <table id="mytable" class="table table-bordred table-striped">
        <thead>
          <tr>
             <th style="width:10%">No. </th>
             <th>Name of Member</th>
             <th>Position</th>
             <th colspan="2" style="width: 10%">ACTION</th>
           </tr>
       </thead>

       <tbody>
        <% if(panjang == 0){ %>
           <td colspan="8">Data  kosong</td>
        <%}
           for (var i=0; i<panjang; i++)
             {%>
               <tr>
                 <td style="width:10%"> <a class="btn btn-primary" href="/projects/detail/<%=data[i].project_id%>?page=overview"> <%= i+1 %> </a></td>
                 <td style="text-align:left">  <%= data[i].project_name    %></td>
                 <!-- <td>  <%= data[i].project_id    %></td> -->
                 <td>
                   <a class="btn btn-success" href="/projects/edit/<%= data[i].project_id %>" >Edit</a>
                 </td>
                 <td>
                   <a  class="btn btn-danger" href="/projects/delete/<%=data[i].project_id%>" class='delete'
                   onclick="return confirm('Yakin menghapusn data?')">Delete</a>
                 </td>
               </tr>
       <% } %>
       </tbody>
       <tr>
         <td></td>
         <td>
           <a  class="btn btn-success" href="/projects/add" class='btn btn-success pull-left' >Add</a>
         </td>
       </tr>
     </table>
    </div><!-- /card-container -->

    <!-- pagination -->
      <ul class="pagination pull-right">
        <!-- Tombol Prev-->
        <%# if(halaman>1){ %>
        <li><a href="<%##= url.replace(`/?page=${halaman}`,`/?page=${halaman-1}`) %>">Prev</a></li>
        <%#}%>

        <%#for(let i=1; i<=jumlahHalaman; i++){  %>
        <li<%#= (halaman==i) ? " class=active" : "" %> ><a href="<%#= url.replace(`/?page=${halaman}`,`/?page=${i}`) %>"><%#=i%></a></li>
        <%# }%>

        <!-- Tombol Next-->
        <%# if(halaman<jumlahHalaman){ %>
        <li><a href="<%#= url.replace(`/?page=${halaman}`,`/?page=${halaman+1}`) %>">Next</a></li>
        <%#}%>
      </ul>
    <!-- pagination -->

  </div> <!-- Penutup col-9  -->

</div>


